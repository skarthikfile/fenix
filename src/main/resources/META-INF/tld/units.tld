<!DOCTYPE taglib
  PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
  "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">


<taglib>

	<!-- ========== Tag Library Description Elements ========================= -->
	<tlib-version>1.0</tlib-version>
	<jsp-version>1.2</jsp-version>
	<short-name>unit</short-name>
	<uri>http://fenix-ashes.ist.utl.pt/taglib/units</uri>
	<description>
		Units tree render
	</description>
 
	<tag>
	   <name>tree</name>
	   <tag-class>org.fenixedu.academic.servlet.taglib.UnitsTree</tag-class>
	   <body-content>empty</body-content>
	   <description>
	   	  Renders the units tree
	   </description>
	   <attribute>
	 	  	<name>initialUnit</name>
	  	 	<required>true</required>
	  	 	<rtexprvalue>true</rtexprvalue>
	   </attribute>
	   <attribute>
	  	 	<name>unitParamName</name>
	  	 	<required>true</required>
	   		<rtexprvalue>true</rtexprvalue>
	   </attribute>
	   <attribute>
			<name>path</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>    
	   <attribute>
	   		<name>state</name>
	   		<required>false</required>
	   		<rtexprvalue>true</rtexprvalue>
	   </attribute>
	   <attribute>
	   		<name>expanded</name>
	   		<required>false</required>
	   		<rtexprvalue>true</rtexprvalue>
	   </attribute>
	</tag>

</taglib>  